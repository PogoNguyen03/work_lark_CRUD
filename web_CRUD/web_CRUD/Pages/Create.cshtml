@page
@model CreateModel
@{
    ViewData["Title"] = "Create Record";
}

<h1>Create Record</h1>

<form method="post">
    <div class="form-group">
        <label for="JsonContent">JSON Content:</label>
        <textarea id="JsonContent" name="JsonContent" class="form-control" rows="10" asp-for="JsonContent"></textarea>
        <span asp-validation-for="JsonContent" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
